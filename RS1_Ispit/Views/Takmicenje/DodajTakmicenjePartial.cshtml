@model RS1_Ispit_asp.net_core.ViewModels.DodajTakmicenjeVM

<div class="row">
    <form class="form  col-md-4 col-sm-4" ajax-poziv='da' action="/Takmicenje/DodajTakmicenje" ajax-rezultat="takmicenja">
        <div class="form-group ">
            <label for="@Model.PredmetId">Predmet</label>
            <select asp-for="@Model.PredmetId" asp-items="@Model.Predmeti.Select(s => new SelectListItem {Value = s.Id.ToString(), Text = s.Naziv+" "+ s.Razred })" class="form-control">
            </select>
        </div>
        <div class="form-group">
            <label for="@Model.Skole">Skola</label>
            <select asp-for="@Model.SkolaId" asp-items="@Model.Skole.Select(s => new SelectListItem {Value = s.Id.ToString(), Text = s.Naziv })" class="form-control">
            </select>
        </div>
        <div class="form-group">
            <label for="@Model.Datum">Datum</label>
            <input type="text" value="@Model.Datum.ToString("dd.MM.yyyy")" class="form-control" readonly />
        </div>

        <div class="form-group">
            <input type="submit" id="dodajTakmicenje" class="btn btn-primary form-control" value="Snimi" />
        </div>
    </form>
</div>